<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isExchangeInvalid"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.page.main.exchange.ExchangeActivity">

        <!--header-->
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.startwithn.exchange_android.ui.widget.AppToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:iconBackSrc="@drawable/icon_close"
                app:title="@string/title_main_exchange" />

            <!--current to-->
            <LinearLayout
                android:layout_marginTop="@dimen/margin_6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_30dp"
                android:paddingBottom="@dimen/padding_14dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:visibility="@{isExchangeInvalid ? View.VISIBLE : View.GONE,default=gone}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:visibility="gone"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/validate_money_incorrect"
                        android:textColor="@color/yellow_sea_buckthorn"
                        app:fontFamily="@font/prompt_regular" />
                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/validate_enter_money_again"
                        android:textColor="@color/yellow_sea_buckthorn"
                        app:fontFamily="@font/prompt_regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/padding_32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/icon_next"
                        android:drawablePadding="@dimen/padding_8dp"
                        android:text="@string/hint_exchange_from"
                        android:textColor="@color/white"
                        app:fontFamily="@font/prompt_regular" />

                    <FrameLayout
                        android:paddingStart="@dimen/padding_56dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/TextViewExtraLarge3"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/green_yellow"
                            android:drawableTint="@color/green_yellow"
                            android:gravity="center"
                            android:layout_marginEnd="@dimen/margin_30dp"
                            android:layout_gravity="center_vertical"
                            android:inputType="number"
                            android:text="10000"
                            android:textColor="@{isExchangeInvalid ? @color/yellow_sea_buckthorn : @color/white , default=@color/white}" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"

                            android:visibility="visible"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_rv_exchange_currency" />
                    </FrameLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:drawablePadding="@dimen/padding_10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/hint_exchange_your_balance_from"
                    android:textColor="@color/green_yellow"
                    app:fontFamily="@font/prompt_regular" />

            </LinearLayout>
        </LinearLayout>

        <!--body-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_header">

            <TextView
                style="@style/TextViewRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_cardinal"
                android:gravity="center_horizontal"
                android:paddingVertical="@dimen/padding_10dp"
                android:text="@string/title_topup_by_k_plus"
                android:textColor="@color/white" />

            <!--current to-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_current_to"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_30dp"
                android:paddingTop="@dimen/padding_32dp"
                android:paddingBottom="@dimen/padding_14dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/icon_next"
                        android:drawablePadding="@dimen/padding_8dp"
                        android:text="@string/hint_exchange_to"
                        android:textColor="@color/white"
                        app:fontFamily="@font/prompt_regular" />

                    <FrameLayout
                        android:paddingStart="@dimen/margin_56dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="invisible"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_rv_exchange_currency" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewExtraLarge3"
                            android:layout_gravity="end|center"
                            android:layout_width="wrap_content"
                            android:gravity="end|center_vertical"
                            android:paddingEnd="@dimen/padding_52dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/padding_8dp"
                            android:text="11231234.98"
                            android:textColor="@color/white"
                            app:fontFamily="@font/prompt_semibold" />

                    </FrameLayout>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_12dp"
                    android:drawablePadding="@dimen/padding_10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/hint_exchange_your_balance_to"
                    android:textColor="@color/gray_silver_sand"
                    app:fontFamily="@font/prompt_regular" />

            </LinearLayout>


            <!--footer-->
            <RelativeLayout
                android:paddingTop="@dimen/margin_40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        style="@style/TextViewRegularPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_slide_confirm"
                        android:layout_gravity="center"
                        android:text="@string/button_next"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textFontWeight="600" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/TextViewRegularPlus"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bg_slide_confirm"
                        android:text="@string/button_next"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary"
                        android:textFontWeight="600"
                         />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/margin_20dp"
                    android:layout_marginEnd="@dimen/margin_20dp"
                    android:layout_marginBottom="@dimen/margin_24dp"
                    app:cardBackgroundColor="@color/gray_tasman"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="@dimen/zero"
                    app:contentPaddingBottom="@dimen/padding_14dp"
                    app:contentPaddingLeft="@dimen/padding_10dp"
                    app:contentPaddingRight="@dimen/padding_10dp"
                    app:contentPaddingTop="@dimen/padding_14dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewExtraMini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/message_policy"
                        android:textColor="@color/green_corduroy"
                        app:fontFamily="@font/prompt_regular" />

                </androidx.cardview.widget.CardView>

                <com.startwithn.exchange_android.ui.widget.NumberPad
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"/>
            </RelativeLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>