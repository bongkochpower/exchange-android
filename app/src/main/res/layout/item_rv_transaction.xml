<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/zero"
    app:contentPaddingBottom="@dimen/padding_16dp"
    app:contentPaddingLeft="@dimen/padding_14dp"
    app:contentPaddingRight="@dimen/padding_14dp"
    app:contentPaddingTop="@dimen/margin_18dp"
    android:layout_marginBottom="@dimen/margin_6dp"
    tools:ignore="RtlSymmetry">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_exchange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_title"
            style="@style/TextViewMini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:text="@string/hint_transaction_title"
            android:textColor="@color/black_thunder"
            app:fontFamily="@font/prompt_regular"
            app:layout_constraintStart_toEndOf="@id/img_transaction"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_money_trans"
            style="@style/TextViewMini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_12dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:text="@string/hint_transaction_money"
            android:textColor="@color/black_thunder"
            app:fontFamily="@font/prompt_semibold"
            app:layout_constraintStart_toEndOf="@id/img_transaction"
            app:layout_constraintTop_toBottomOf="@id/txt_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_time_ago"
            style="@style/TextViewExtraMini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_transaction_time"
            android:textColor="@color/black_thunder"
            app:fontFamily="@font/prompt_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_status"
            style="@style/TextViewExtraMini"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_transaction_success"
            android:gravity="center"
            android:text="@string/hint_transaction_status_text"
            android:textColor="@color/white"
            app:fontFamily="@font/prompt_regular"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_money_trans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_time_ago"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

