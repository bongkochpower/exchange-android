<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--image-->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_30dp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="@dimen/image_profile_size"
                    android:layout_height="@dimen/image_profile_size"
                    android:src="@drawable/bg_image_profile" />
            </FrameLayout>

            <!--name-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/title_name"
                    android:textColor="@color/text_edittext_gray"
                    app:fontFamily="@font/prompt_bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/green_fun_green"
                    app:fontFamily="@font/prompt_bold"
                    tools:text="Mr. Sompong Naja" />

            </FrameLayout>

            <!--account number-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/title_account_number"
                    android:textColor="@color/text_edittext_gray"
                    app:fontFamily="@font/prompt_bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/green_fun_green"
                    app:fontFamily="@font/prompt_bold"
                    tools:text="123-999-123-094" />

            </FrameLayout>

            <!--amount-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/title_summary_amount"
                    android:textColor="@color/text_edittext_gray"
                    app:fontFamily="@font/prompt_bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/green_fun_green"
                    app:fontFamily="@font/prompt_bold"
                    tools:text="900.00" />

            </FrameLayout>

            <!--name-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/title_currency"
                    android:textColor="@color/text_edittext_gray"
                    app:fontFamily="@font/prompt_bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextViewMini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/green_fun_green"
                    app:fontFamily="@font/prompt_bold"
                    tools:text="บาท" />

            </FrameLayout>

            <!--slide to action-->
            <com.powersoftlab.exchange_android.ui.widget.SlideButton
                android:id="@+id/slide_to_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp"
                android:text="@string/button_slide_to_transfer" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>