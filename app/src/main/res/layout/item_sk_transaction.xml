<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:shimmer_auto_start="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_radius"
                app:cardElevation="@dimen/zero"
                app:contentPaddingBottom="@dimen/padding_16dp"
                app:contentPaddingLeft="@dimen/padding_14dp"
                app:contentPaddingRight="@dimen/padding_14dp"
                app:contentPaddingTop="@dimen/margin_18dp"
                android:layout_marginBottom="@dimen/margin_6dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:id="@+id/img_transaction"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@color/text_edittext_gray"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/tv_title"
                        android:background="@color/text_edittext_gray"
                        android:layout_width="50dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="@dimen/margin_12dp"
                        app:layout_constraintStart_toEndOf="@id/img_transaction"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/tv_money_trans"
                        android:layout_width="80dp"
                        android:layout_height="14dp"
                        android:layout_marginStart="@dimen/margin_12dp"
                        android:layout_marginTop="@dimen/margin_8dp"
                        android:background="@color/text_edittext_gray"
                        app:layout_constraintStart_toEndOf="@id/img_transaction"
                        app:layout_constraintTop_toBottomOf="@id/tv_title" />

                    <View
                        android:id="@+id/tv_time_ago"
                        android:layout_width="70dp"
                        android:layout_height="14dp"
                        android:background="@color/text_edittext_gray"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/tv_transaction_status"
                        android:layout_width="58dp"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:layout_height="25dp"
                        android:backgroundTint="@color/text_edittext_gray"
                        android:background="@drawable/bg_transaction_success"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_time_ago" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</layout>