<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Exchangeandroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>

        <item name="fontFamily">@font/prompt_regular</item>
        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>

    </style>

    <style name="Theme.Exchangeandroid.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <!--<style name="Theme.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Exchangeandroid.Splash</item>
    </style>-->

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:statusBarColor" >@color/colorSecondaryVariant</item>
    </style>

    <style name="Theme.Exchangeandroid.Splash" parent="Theme.Exchangeandroid.NoActionBar" />

    <style name="Theme.Exchangeandroid.Light" parent="Theme.Exchangeandroid.NoActionBar" />

    <style name="Theme.Exchangeandroid.Primary" parent="Theme.Exchangeandroid.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.Exchangeandroid.Main" parent="Theme.Exchangeandroid.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>



    <!--Dialog-->
    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
<!--        <item name="materialAlertDialogTitleTextStyle">@font/prompt_medium</item>-->
        <item name="materialAlertDialogBodyTextStyle">@font/prompt_medium</item>
    </style>


    <!--Bottom Sheet-->
    <style name="LightBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog" />

    <style name="CurveBottomSheetDialogTheme" parent="LightBottomSheetDialogTheme">
        <item name="bottomSheetStyle">@style/CurveBottomSheetStyle</item>
    </style>

    <style name="CurveBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_card_top_curve</item>
    </style>

    <!--CardView-->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/margin_8dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <!--TextView-->
    <style name="TextViewExtraLarge5">
        <item name="android:textSize">@dimen/text_size_default_xxxl</item>
    </style>

    <style name="TextViewExtraLarge4">
        <item name="android:textSize">@dimen/text_size_default_xxl</item>
    </style>

    <style name="TextViewExtraLarge3">
        <item name="android:textSize">@dimen/text_size_default_xl</item>
    </style>

    <style name="TextViewExtraLarge">
        <item name="android:textSize">@dimen/text_size_default_l</item>
    </style>

    <style name="TextViewLarge2">
        <item name="android:textSize">@dimen/text_size_default_mm</item>
    </style>

    <style name="TextViewLarge">
        <item name="android:textSize">@dimen/text_size_default_m</item>
    </style>

    <style name="TextViewRegularPlus">
        <item name="android:textSize">@dimen/text_size_default_sm</item>
    </style>

    <style name="TextViewRegular">
        <item name="android:textSize">@dimen/text_size_default_s</item>
    </style>

    <style name="TextViewSmall">
        <item name="android:textSize">@dimen/text_size_default_ss</item>
    </style>

    <style name="TextViewMini">
        <item name="android:textSize">@dimen/text_size_default_sss</item>
    </style>

    <style name="TextViewExtraMini">
        <item name="android:textSize">@dimen/text_size_default_ssss</item>
    </style>

    <!--Edittext-->
    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/prompt_regular</item>
        <item name="android:textSize">@dimen/text_size_default_sss</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">@color/text_edittext_gray</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/text_back</item>
        <item name="android:paddingStart">@dimen/padding_16dp</item>
<!--        <item name="android:paddingEnd">@dimen/padding_8dp</item>-->
<!--        <item name="android:paddingTop">@dimen/zero</item>-->
<!--        <item name="android:paddingBottom">@dimen/zero</item>-->
    </style>

    <style name="AppEditText.Dropdown">
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">none</item>

        <item name="android:paddingEnd">@dimen/padding_16dp</item>
        <item name="android:drawableEnd">@drawable/icon_arrow_down</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="CurrencyEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/green_fun_green</item>
    </style>



</resources>