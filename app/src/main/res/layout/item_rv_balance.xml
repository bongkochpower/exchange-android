<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="@dimen/padding_10dp"
    android:layout_marginEnd="@dimen/margin_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_balance"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextViewRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_th_currency"
        android:textColor="@color/white"
        android:layout_gravity="center_vertical"
        app:fontFamily="@font/prompt_regular"
        />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextViewRegularPlus"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_marginBottom="-8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_zero_with_point"
        android:textColor="@color/white"
        app:fontFamily="@font/prompt_semibold"
        />

</FrameLayout>