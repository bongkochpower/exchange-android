<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_exchange"
    app:startDestination="@id/exchangeFragment">

    <fragment
        android:id="@+id/authWithBioFragmentExchange"
        android:name="com.powersoftlab.exchange_android.ui.page.main.withdraw.auth_with_bio.AuthWithBioFragment"
        android:label="AuthWithBioFragment"
        tools:layout="@layout/fragment_auth_with_bio" >
        <argument
            android:name="authBy"
            app:argType="com.powersoftlab.exchange_android.common.enum.AuthByEnum"
            android:defaultValue="EXCHANGE" />
        <argument
            android:name="amount"
            app:argType="float"
            android:defaultValue="0.0" />


    </fragment>

    <fragment
        tools:layout="@layout/fragment_exchange"
        android:id="@+id/exchangeFragment"
        android:name="com.powersoftlab.exchange_android.ui.page.main.exchange.ExchangeFragment"
        android:label="ExchangeFragment" >

        <action
            android:id="@+id/action_exchangeFragment_to_authWithBioFragmentExchange"
            app:destination="@id/authWithBioFragmentExchange" />
    </fragment>
</navigation>