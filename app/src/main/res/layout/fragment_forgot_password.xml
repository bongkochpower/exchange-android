<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>
        <variable
            name="isVerifyPhone"
            type="Boolean" />
        <variable
            name="isPhoneEmpty"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/padding_30dp"
        tools:context=".ui.page.login.LoginFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="@dimen/card_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.65"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.40">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/padding_24dp"
                android:paddingVertical="@dimen/padding_16dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewLarge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/title_forgot_password"
                        android:textColor="@color/black"
                        app:fontFamily="@font/prompt_semibold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextViewMini"
                        android:visibility="@{isPhoneEmpty ? View.VISIBLE : View.INVISIBLE}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_20dp"
                        android:gravity="center_horizontal"
                        android:text="@string/validate_not_found_phone_forgot_password"
                        android:textColor="@color/color_error_text"
                        app:fontFamily="@font/prompt_regular" />

                    <!--verify phone-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="@{isVerifyPhone ? View.VISIBLE : View.GONE}">

                        <EditText
                            android:maxLength="@integer/length_phone_number"
                            android:id="@+id/edt_phone_number"
                            style="@style/AppEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edittext_login"
                            android:hint="@string/hint_username"
                            android:importantForAutofill="no"
                            android:inputType="phone"
                            tools:ignore="RtlSymmetry" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_confirm_tel"
                            style="@style/TextViewRegularPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_16dp"
                            android:background="@drawable/button_confirm"
                            android:text="@string/button_confirm_username"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <!--verify otp-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="@{!isVerifyPhone ? View.VISIBLE : View.GONE}">

                        <com.poovam.pinedittextfield.SquarePinField
                            android:id="@+id/spf_otp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/margin_12dp"
                            android:background="@drawable/bg_pin_field"
                            android:inputType="number"
                            android:scaleY="1.5"
                            app:cornerRadius="6dp"
                            app:distanceInBetween="8dp"
                            app:fieldBgColor="#F1F2F2"
                            app:fieldColor="@color/colorSecondary"
                            app:highlightColor="@color/colorSecondary"
                            app:isCursorEnabled="true"
                            app:lineThickness="0.5dp"
                            app:noOfFields="@integer/length_otp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextViewSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_16dp"
                            android:drawableStart="@drawable/icon_resend_otp"
                            android:drawablePadding="@dimen/padding_12dp"
                            android:text="@string/hint_resend_otp"
                            android:textColor="@color/text_edittext_gray"
                            app:drawableTint="@color/text_edittext_gray"
                            app:fontFamily="@font/prompt_regular"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />
                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_back_to_login"
                    style="@style/TextViewSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:drawableStart="@drawable/icon_back_forget_pw"
                    android:drawablePadding="@dimen/padding_12dp"
                    android:onClick="goToLogin"
                    android:text="@string/title_back_to_main_login"
                    android:textColor="@color/text_back"
                    app:fontFamily="@font/prompt_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>