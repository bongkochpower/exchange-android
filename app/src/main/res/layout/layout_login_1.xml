<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/ll_login_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_28dp"
            android:gravity="center_horizontal"
            android:text="@string/title_login"
            android:textColor="@color/black"
            app:fontFamily="@font/prompt_semibold" />

        <com.powersoftlab.exchange_android.ui.widget.ButtonLogin
            android:id="@+id/btn_login_apple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16dp"
            app:buttonBgSrc="@drawable/button_apple"
            app:buttonIconSrc="@drawable/icon_apple"
            app:buttonTextColorRes="@color/white"
            app:buttonTitle="@string/button_apple_login" />

        <com.powersoftlab.exchange_android.ui.widget.ButtonLogin
            android:id="@+id/btn_login_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16dp"
            app:buttonBgSrc="@drawable/button_facebook"
            app:buttonIconSrc="@drawable/icon_facebook"
            app:buttonTextColorRes="@color/white"
            app:buttonTitle="@string/button_facebook_login" />

        <com.powersoftlab.exchange_android.ui.widget.ButtonLogin
            android:id="@+id/btn_login_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16dp"
            app:buttonBgSrc="@drawable/button_line"
            app:buttonIconSrc="@drawable/icon_line"
            app:buttonTextColorRes="@color/white"
            app:buttonTitle="@string/button_line_login" />

        <com.powersoftlab.exchange_android.ui.widget.ButtonLogin
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_16dp"
            app:buttonBgSrc="@drawable/button_login"
            app:buttonIconSrc="@null"
            app:buttonTextColorRes="@color/colorPrimary"
            app:buttonTitle="@string/button_app_login" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_register"
            style="@style/TextViewRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:onClick="goToRegisterTerm"
            android:text="@string/title_new_account"
            android:textColor="@color/color_error_text"
            app:fontFamily="@font/prompt_regular" />

    </LinearLayout>
</layout>