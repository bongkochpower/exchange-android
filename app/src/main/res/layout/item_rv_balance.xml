<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:background="@drawable/bg_item_balance"
        android:padding="@dimen/padding_10dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewRegular"
            android:layout_width="wrap_content"
            android:id="@+id/tv_title"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/hint_th_currency"
            android:textColor="@color/white"
            app:fontFamily="@font/prompt_regular" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/tv_money"
            android:layout_marginBottom="-4dp"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="@string/hint_zero_with_point"
            android:textColor="@color/white"
            app:fontFamily="@font/prompt_semibold"
            tools:text="100,000.00" />

    </FrameLayout>
</layout>