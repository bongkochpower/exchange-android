<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_app"
        android:layout_height="match_parent"
        tools:context=".ui.page.hamburger_menu.setting.SettingsActivity">

        <com.powersoftlab.exchange_android.ui.widget.AppToolbar
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/zero"
            app:iconBackSrc="@drawable/icon_close_black"
            app:layout_constraintTop_toTopOf="parent">

        </com.powersoftlab.exchange_android.ui.widget.AppToolbar>

        <FrameLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar_layout" >

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextViewMini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_14dp"
                android:drawablePadding="@dimen/padding_10dp"
                android:gravity="center_horizontal"
                android:text="@string/menu_setting"
                android:textColor="@color/text_edittext_gray"
                app:fontFamily="@font/prompt_regular" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>