<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_40dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextViewLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_28dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_edittext_gray"
            app:fontFamily="@font/prompt_semibold"
            tools:text="Card Name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_12dp"
                android:src="@drawable/icon_arrow_left" />
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_cards"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:orientation="horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/padding_12dp"
                android:src="@drawable/icon_arrow_right" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_req_new_card"
            style="@style/TextViewRegularPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_30dp"
            android:background="@drawable/bg_confirm"
            android:text="@string/button_request_new_card"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>

</layout>